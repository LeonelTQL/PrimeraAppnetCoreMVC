<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimeraAppnetCoreMVC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/PrimeraAppnetCoreMVC.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <nav class="side-nav">
                <ul class="nav-menu">
                    <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="TipoMedicamento" asp-action="Index"><i class="fas fa-tachometer-alt"></i><span class="menu-text">Tipo de medicamento</span></a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Sucursal" asp-action="Index"><i class="fas fa-user"></i><span class="menu-text">Sucursal</span></a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Laboratorio" asp-action="Index"><i class="fas fa-file-alt"></i><span class="menu-text">Laboratorio</span></a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Medicamentos" asp-action="Index"><i class="fas fa-play"></i><span class="menu-text">Medicamento</span></a></li>
                    <li class="nav-item"><a href="#"><i class="fas fa-sign-out-alt"></i><span class="menu-text">Salir</span></a></li>
                </ul>
            </nav>
            <div class="main-content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </header>

    <input type="hidden" id="hdfOculto" value="@Url.Content("~")" />

    <footer class="border-top footer text-muted">

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
