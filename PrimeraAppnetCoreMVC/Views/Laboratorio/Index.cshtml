
@{
    ViewData["Title"] = "Index";
}

<h1>Laboratorios</h1>

<script src="~/js/laboratorio.js"></script>
<script src="~/js/generic.js"></script>

<form id="frmBusquedaLabotarorio" method="post">
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" onkeyup="filtarLaboratorio()" id="txtnombre">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="direccion">Direccion:</label>
                    <input type="text" class="form-control" onkeyup="filtarLaboratorio()" id="txtdireccion">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="personacontacto">Persona de contacto:</label>
                    <input type="text" class="form-control" onkeyup="filtarLaboratorio()" id="txtpersonacontacto">
                </div>
            </div>
            <div class="row g-3"> 
                <div class=" d-grid gap-1">
                        <button onclick="buscarLaboratorio()" class="btn btn-primary">
                        Buscar
                    </button>
                        <button onclick="" class="btn btn-danger">
                        Limpiar
                    </button>
                </div>
            </di>
        </div>
    </div>
</div>
</form>

<div id="divtabla">
</div>
